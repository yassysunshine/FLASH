
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <p>
        <strong>シード名1:</strong>
        <%= @idea.seed_name1 %>
      </p>
      <p>
        <strong>シード名2:</strong>
        <%= @idea.seed_name2 %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= @idea.title %>
      </p>
      
      <p>
        <strong>Content:</strong>
        <%= @idea.content %>
      </p>
      
      <p>
        <strong>Image:</strong>
        <%= image_tag @idea.image %>
      </p>
      
      <% unless @idea.user == current_user %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(idea_id: @idea.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
      
      <%= link_to '編集', edit_idea_path(@idea) %> |
      <%= link_to '戻る', ideas_path %>
    </div>
  </div>
</div>