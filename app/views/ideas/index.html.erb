<p id="notice"><%= notice %></p>

<% provide(:title, 'All Ideas') %>
<h1>All Ideas</h1>

<%= search_form_for @search do |f| %>
  <div class="form-group">
    <%= f.label :title_cont, "Ideas" %>
    <%= f.search_field :title_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<h2>検索結果</h2>
<table>
  <thead>
      <tr>  
        <th>Seed name1</th>
        <th>Seed name2</th>
        <th>Title</th>
        <th>Content</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
  <% if @result.any? %>
  <% @result.each do |idea| %>
      <tr>
        <td><%= idea.seed_name1 %></td>
        <td><%= idea.seed_name2 %></td>
        <td><%= idea.title %></td>
        <td><%= idea.content %></td>
        <td><%= image_tag idea.image %></td>
        <td><%= idea.title %></td>
      </tr>
  <% end %>
  <% end %>
  </tbody>
</table>

<tbody>
<% if @result.nil? %>
  <% @result.each do |idea| %>
      <tr>
        <td><%= idea.seed_name1 %></td>
        <td><%= idea.seed_name2 %></td>
        <td><%= idea.title %></td>
        <td><%= idea.content %></td>
        <td><%= image_tag idea.image %></td>
        <td><%= idea.title %></td>
      </tr>
  <% end %>
<% end %>
 </tbody>
</table>

<br>
<h2>すべてのアイディア</h2>
<table>
  <thead>
    <tr>
      <th>Seed name1</th>
      <th>Seed name2</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.seed_name1 %></td>
        <td><%= idea.seed_name2 %></td>
        <td><%= idea.title %></td>
        <td><%= idea.content %></td>
        <td><%= image_tag idea.image %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= paginate @ideas %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
<%= link_to 'New Seed', new_seed_path %>

