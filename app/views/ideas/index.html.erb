<p id="notice"><%= notice %></p>

<% provide(:title, 'All Ideas') %>
<h1>FLASHとは</h1>
<br>
<h5>皆様の”ひらめき”（FLASH）を投稿、シェアするアプリです。</h5>
<br>
<%= search_form_for @search do |f| %>
  <div class="form-group">
    <%= f.label :title_cont, "IdeaのTitleを入力ください" %>
    <%= f.search_field :title_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<h2>アイディア一覧</h2>
<table>
  <thead>
      <tr>  
        <th>  シード名1  </th>
        <th>  シード名2  </th>
        <th>  アイディア名  </th>
        <th>  内容  </th>
        <th>  画像  </th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
  <% if @result.any? %>
  <% @result.each do |idea| %>
      <tr>
        <td><%= idea.seed_name1 %></td>
        <td><%= idea.seed_name2 %></td>
        <td><%= idea.title %></td>
        <td><%= idea.content %></td>
        <td><%= image_tag idea.image %></td>
        <% if logged_in? %>
        <td><%= link_to '詳細', idea %></td>
        <td><%= link_to '編集', edit_idea_path(idea) %></td>
        <td><%= link_to '削除', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>
      </tr>
  <% end %>
  <% end %>
  <%= paginate @result %>
  </tbody>
</table>




